public with sharing class DefaultTriggerHandler 
{ 
	public static boolean Stop=true; 
    public static void Triggerque1(List<account> Alist)
   {
	   account accClone = new account();
   	   for(account a: Alist)
   	   {  	   	  
   	   	 accClone = a.clone(false, true,true,true);
   	   }
   	   if(Stop) 
   	   {
   	   	 Stop=false;
   	   	 insert accClone;
   	   }
   }
