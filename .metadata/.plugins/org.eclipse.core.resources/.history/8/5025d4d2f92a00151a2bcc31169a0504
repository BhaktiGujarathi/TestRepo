    public void sortNumberDec(L1){
       // L1.sort();
       //System.debug(L1); 
      Integer i, j;
        for(i=0;i<L1.size();i++){
            for(j=1;j<L1.size();j++){
                if(L1[j-1] < L1[j]){
                    Integer temp= L1[j-1];
                    L1[j-1]=L1[j];
                    L1[j]=temp;
                }
            }
        }
       System.debug(L1);
    }
